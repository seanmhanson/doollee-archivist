{
  "name": "doollee-archivist",
  "version": "0.1.0",
  "description": "Scripts to scrape and normalize data from doolee.com's archive of playwrights and plays.",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "yarn@4.12.0",
  "type": "commonjs",
  "scripts": {
    "build:noEmit": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -p tsconfig.json",
    "db:init": "ts-node -r tsconfig-paths/register src/scripts/init-db.ts",
    "db:reset": "ts-node -r tsconfig-paths/register src/scripts/reset-db.ts",
    "clean:output": "rimraf ./output/*-authors ./output/*-plays ./output/*.log",
    "scrape:indexes": "ts-node -r tsconfig-paths/register src/scripts/scrapeIndexes.ts",
    "scrape:listings": "ts-node -r tsconfig-paths/register src/scripts/scrapeListings.ts",
    "scrape:all": "ts-node -r tsconfig-paths/register src/scripts/main/main.ts",
    "test:rateLimiting": "ts-node -r tsconfig-paths/register src/scripts/testRateLimiting.ts",
    "analyze:genres": "ts-node -r tsconfig-paths/register src/scripts/normalize/analyze-genres.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^24.10.1",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "mongodb-memory-server": "^11.0.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "dependencies": {
    "@playwright/test": "^1.57.0",
    "dotenv": "^17.2.3",
    "mongodb": "^7.0.0",
    "playwright": "^1.57.0",
    "yargs": "^18.0.0"
  }
}
